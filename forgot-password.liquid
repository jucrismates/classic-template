{% extends base %}
{% block title %}Forgot Password - {{ store.name }}{% endblock %}
{% block content %}

<form class="form-signin" role="form" method="POST">
    <h3 class="form-signin-heading">Forgot Password</h3>
    <input type="email" name="Email" class="form-control last" placeholder="Email address" value="{{ email }}" required autofocus>
    {% if incorrectEmail %}
    <div class="alert alert-danger">
        Email is incorrect.
    </div>
    {% endif %}
    {% if emailSent %}
    <div class="alert alert-success">
        We have just sent an email with instructions on how to reset your password.<br /><br />
        Can't find the password reset email?<br />
        You may need to check your Junk or Spam folder for a message from Expertory.com.
    </div>
    {% endif %}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    <div class="text-center">
        <a class="btn btn-link" href="/login"><i class="fa fa-arrow-left"></i> Back to login</a>
    </div>
</form>
    

{% endblock %}

{% block scripts %}
{% endblock %}